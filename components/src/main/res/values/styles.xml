<resources>

    <style name="ItemGame">
        <item name="android:background">@color/default_background</item>
        <item name="android:paddingTop">@dimen/default_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/default_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/default_padding_vertical</item>
        <item name="android:paddingRight">@dimen/default_padding_vertical</item>
        <item name="android:paddingStart">@dimen/default_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/default_padding_vertical</item>
    </style>

    <style name="ItemGameText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ItemGameImg">
        <item name="android:layout_width">@dimen/item_game_image_size</item>
        <item name="android:layout_height">@dimen/item_game_image_size</item>
        <item name="android:layout_marginRight">@dimen/default_padding_vertical</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_vertical</item>
    </style>

</resources>
