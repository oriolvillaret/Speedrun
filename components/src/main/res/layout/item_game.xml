<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_game_height">

    <LinearLayout
        style="@style/ItemGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_game_img"
            style="@style/ItemGameImg"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/default_text_color"/>

        <TextView
            android:id="@+id/item_game_name"
            style="@style/ItemGameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/item_default_text" />
    </LinearLayout>
</RelativeLayout>